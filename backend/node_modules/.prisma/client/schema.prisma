generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique @db.VarChar(100)
  password String  @db.VarChar(100)
  name     String  @db.VarChar(255)
  token    String? @db.VarChar(100)

  patient Patient[]

  @@map("users")
}

model Measurement {
  id         Int      @id @default(autoincrement())
  user_id    String   @unique @default("default_user_id") @db.VarChar(100)
  systolic   Float
  diastolic  Float
  mean       Float
  heart_rate Float
  timestamp  DateTime @default(now())

  @@map("measurements")
}

model Patient {
  id             Int      @id @default(autoincrement())
  user_id        String   @default("default_user_id") @db.VarChar(100)
  name           String   @db.VarChar(255)
  gender         Gender
  phone          Int
  work           String   @db.VarChar(50)
  last_education String   @db.VarChar(50)
  place_of_birth String   @db.VarChar(50)
  date_of_birth  DateTime

  user                User                 @relation(fields: [user_id], references: [id])
  patient_measurement PatientMeasurement[]

  @@map("patients")
}

model PatientMeasurement {
  id              Int      @id @default(autoincrement())
  patient_id      Int
  category_result String?
  weight          Float
  systolic        Float
  diastolic       Float
  mean            Float
  heart_rate      Float
  timestamp       DateTime @default(now())

  patient Patient @relation(fields: [patient_id], references: [id])

  @@map("patient_measurements")
}

model CategoryResult {
  id            Int    @id @default(autoincrement())
  name          String @db.VarChar(100)
  min_systolic  Int
  max_systolic  Int
  min_diastolic Int
  max_diastolic Int
  description   String @db.VarChar(255)

  @@map("category_results")
}

enum Gender {
  MALE
  FEMALE
}
